<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userAvatarIV"
            android:layout_marginStart="@dimen/push_small"
            android:layout_marginTop="@dimen/push_small"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/userFullNameTV"
            android:layout_toEndOf="@+id/userAvatarIV"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/push_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/userScreenNameTV"
            android:layout_toEndOf="@+id/userAvatarIV"
            android:layout_below="@+id/userFullNameTV"
            android:layout_alignStart="@+id/userFullNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <EditText
        android:layout_marginTop="@dimen/push_small"
        android:layout_marginStart="@dimen/push_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="What's happening?"
        android:ems="10"
        android:id="@+id/tweetBodyET" />

</LinearLayout>
